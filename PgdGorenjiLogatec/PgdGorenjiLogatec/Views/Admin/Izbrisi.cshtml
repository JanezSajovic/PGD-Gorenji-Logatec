@model PgdGorenjiLogatec.CustomModels.Intervencija

@{
    ViewData["Title"] = "Izbrisi";
}


<section id="blog" class="blog" style="padding: 90px !important;">
    <form asp-controller="Admin" asp-action="Izbrisi" method="post">
        <h1>Izbrisi</h1>
        <div>
            <h4>Intervencija</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-10">
                    @Html.TextBoxFor(model => model.Id, new { @readonly = true })
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Naslov)
                </dt>
                <dd class="col-sm-10">
                    @Html.TextBoxFor(model => model.Naslov, new { @readonly = true })
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Datum)
                </dt>
                <dd class="col-sm-10">
                    @Html.TextBoxFor(model => model.Datum, new { @readonly = true })
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Opis)
                </dt>
                <dd class="col-sm-10">
                    @Html.TextBoxFor(model => model.Opis, new { @readonly = true })
                </dd>
            </dl>


            <input type="submit" value="Izbriši" class="btn btn-danger" /> |
            <a asp-action="UrejanjeIntervencij">Nazaj na seznam</a>
        </div>
    </form>
</section>